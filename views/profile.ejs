<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table Example</title>
    <link rel="stylesheet" href="/styles/reset.css">
	<link rel="stylesheet" href="/styles/styleProfile.css">
    <style>
        .container {
            text-align: center; /* Change to center */
            margin: 0 auto;
            width: 80%;
        }

        table {
            border-collapse: collapse;
            /* width: auto; Remove this line */
            margin: 0 auto; /* Add this line */
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        h1 {
            color: #008000;
        }

        .rowInd1 {
            height: 12vh;
            background-color: #f0f0f0;
            color: #008000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 200%;
        }

        .rowInd1 h1 {
            margin: 0 auto;
        }

        .greetings {
            font-size: 7.5vh; 
            padding-top: 2vh;
            padding-bottom: 2vh;
        }
    </style>
    <script>
        window.onload = function() {
            const table = document.querySelector('table');
            const ths = table.querySelectorAll('th');
            const tds = table.querySelectorAll('td');

            // Function to get the maximum width of strings in a column
            function getMaxWidth(elements) {
                let maxWidth = 0;
                elements.forEach(element => {
                    const width = element.clientWidth;
                    if (width > maxWidth) {
                        maxWidth = width;
                    }
                });
                return maxWidth;
            }

            // Set the width of each column based on the maximum string width + 10vw
            ths.forEach((th, index) => {
                const maxCellWidth = Math.max(getMaxWidth([th]), getMaxWidth(Array.from(tds, td => td.parentNode.children[index])));
                th.style.width = `calc(${maxCellWidth}px + 10vw)`;
            });
        };
    </script>
</head>
<body>
    <div class="rowInd1">
        <h1>BhuFusion</h1>
    </div>
